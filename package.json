{
  "name": "cursor-goalguard",
  "displayName": "GoalGuard: Two-Layer Agents for Cursor",
  "description": "Two-layer agent harness for Cursor: Supervisor (user-facing) delegates to Worker/Verifier subagents + .ai workspace memory. No API keys.",
  "version": "0.1.0",
  "publisher": "khalidsaidi",
  "license": "MIT",
  "main": "./dist/extension.js",
  "engines": { "vscode": "^1.80.0" },
  "categories": ["Other"],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:goalguard.enableWorkspace",
    "onCommand:goalguard.startSupervisor",
    "onCommand:goalguard.doctor",
    "onCommand:goalguard.forceReinstall"
  ],
  "contributes": {
    "commands": [
      { "command": "goalguard.enableWorkspace", "title": "GoalGuard: Enable in Workspace" },
      { "command": "goalguard.startSupervisor", "title": "GoalGuard: Start Supervisor Session" },
      { "command": "goalguard.doctor", "title": "GoalGuard: Doctor (Check Setup)" },
      { "command": "goalguard.forceReinstall", "title": "GoalGuard: Force Reinstall Templates" }
    ],
    "configuration": {
      "title": "GoalGuard",
      "properties": {
        "goalguard.autoPromptOnOpen": {
          "type": "boolean",
          "default": true,
          "description": "Show a prompt to enable GoalGuard when opening a workspace that is not initialized."
        },
        "goalguard.preferDirectPromptCommand": {
          "type": "boolean",
          "default": true,
          "description": "Try Cursor-specific command to open Agent chat with a prompt. Falls back to clipboard paste."
        },
        "goalguard.showStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show a small status bar indicator when GoalGuard is enabled."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "lint": "eslint .",
    "package": "vsce package",
    "prepublishOnly": "npm run lint && npm run compile"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vscode/vsce": "^2.26.0",
    "eslint": "^9.0.0",
    "typescript": "^5.6.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/khalidsaidi/cursor-goalguard.git"
  }
}
